<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
                android:background="@drawable/background"

    tools:context="com.example.daffy.calculator_cmpe277_lab1.CalculatorActivity">



    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        android:layout_centerHorizontal="true">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/digit_one"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="@string/digit_one"  />


            <Button
                android:id="@+id/digit_two"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="@string/digit_two" />

            <Button
                android:id="@+id/digit_three"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="@string/digit_three" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp">

            <Button
                android:id="@+id/digit_four"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="@string/digit_four" />


            <Button
                android:id="@+id/digit_five"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="@string/digit_five" />

            <Button
                android:id="@+id/digit_six"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="@string/digit_six" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp">

            <Button
                android:id="@+id/digit_seven"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="@string/digit_seven" />


            <Button
                android:id="@+id/digit_eight"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="@string/digit_eight" />

            <Button
                android:id="@+id/digit_nine"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="@string/digit_nine" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp">

            <Button
                android:id="@+id/reset"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="@string/reset"/>

            <Button
                android:id="@+id/digit_zero"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="@string/digit_zero" />


            <Button
                android:id="@+id/compute"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="@string/compute" />
        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:id="@+id/linearLayout2"
        android:layout_marginLeft="0dp"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/addition"
            android:layout_width="58dp"
            android:layout_height="35dp"
            android:text="@string/addition"
            android:layout_alignTop="@+id/subtraction"
            android:layout_toStartOf="@+id/subtraction" />

        <Button
            android:id="@+id/subtraction"
            android:layout_width="58dp"
            android:layout_height="35dp"
            android:text="@string/subtraction"
            android:layout_alignTop="@+id/multiplication"
            android:layout_toStartOf="@+id/multiplication" />

        <Button
            android:id="@+id/multiplication"
            android:layout_width="58dp"
            android:layout_height="35dp"
            android:text="@string/multiplication"
            android:layout_toStartOf="@+id/division" />

        <Button
            android:id="@+id/division"
            android:layout_width="58dp"
            android:layout_height="35dp"
            android:text="@string/division"
            android:layout_alignTop="@+id/multiplication" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:id="@+id/linearLayout3"
        android:layout_marginLeft="0dp"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp">

    </LinearLayout>

    <TextView
        android:id="@+id/results"
        android:text="@string/results"
        android:layout_width="270dp"
        android:layout_height="35dp"
        android:maxLines = "3"
        android:scrollbars = "vertical"
        android:background="@drawable/back"
        android:paddingLeft="20dp"
        android:paddingTop="4dp"
        android:fontFamily="sans-serif"
        android:textSize="16dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
